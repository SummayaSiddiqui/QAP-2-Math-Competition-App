<%- include('partials/header') %>
<body>
    <div class="quiz_content">
        <h1>Math Quiz</h1>

        <div class="quiz_container">
            <!-- Display number of correct answers -->
            <p><strong>Total Correct Answers: <%= correctAnswers || 0 %></strong></p>

            <!-- Show message if there is any feedback -->
            <% if (typeof message !== "undefined") { %>
                <p style="color: red;"><strong><%= message %></strong></p>
            <% } %>

            <p><strong>Question:</strong> <%= question %></p>

            <form action="/quiz" method="POST">
                <label for="answer">Your Answer:</label>
                <input type="text" id="answer" name="answer" required>

                <!-- Hidden inputs to track the correct answers and pass the current question -->
                <input type="hidden" name="question" value="<%= question %>">
                <input type="hidden" name="correctAnswers" value="<%= correctAnswers || 0 %>">
                
                <button type="submit">Submit</button>
            </form>
        </div>

        <div class="home_button">
            <a href="/" class="home_link">Return to Home</a>
        </div>
    </div>
</body>
</html>
